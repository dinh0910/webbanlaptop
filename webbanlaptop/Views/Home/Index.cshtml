@model IEnumerable<webbanlaptop.Models.TaiKhoanLogin>

@{
    ViewData["Title"] = "Home Page";
    var danhmuc = ViewBag.danhmuc as IQueryable<webbanlaptop.Models.DanhMuc>;
    var sanpham = ViewBag.sanpham as IQueryable<webbanlaptop.Models.SanPham>;
    var d = "macbook";
    var i = 0;
}

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh mục</span>
                    </div>
                    <ul>
                        @foreach(var item in danhmuc){
                            <li><a asp-asp-controller="Home" asp-action="ShopGrid" asp-route-id="@item.DanhMucID">@item.Ten</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="img/hero/banner.jpg">
                    <div class="hero__text">
                        <span>FRUIT FRESH</span>
                        <h2>Vegetable <br />100% Organic</h2>
                        <p>Free Pickup and Delivery Available</p>
                        <a href="#" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
            </div>
            <div class="featured__controls">
                <ul>
                    <li class="active" data-filter="*">All</li>
                    <li data-filter=".macbook">Macbook</li>
                    <li data-filter=".gaming">Gaming</li>
                    <li data-filter=".vanphong">Văn phòng</li>
                    <li data-filter=".phukien">Phụ kiện</li>
                </ul>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(var item in sanpham){
                if (i < 8)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix @d">
                        <div class="featured__item shadow p-3 mb-5 bg-light rounded-3">
                            <div class="featured__item__pic">
                                <img src="~/images/products/@item.HinhAnh" />
                                @if(item.GiamGia > 0){
                                    <div class="product__discount__percent">-@item.GiamGia%</div>
                                }
                                <ul class="featured__item__pic__hover">
                                    <li class="shadow rounded-circle"><a asp-action="AddToCartLove" asp-route-id="@item.SanPhamID"><i class="fa fa-heart"></i></a></li>
                                    <li class="shadow rounded-circle"><a asp-action="AddToCart" asp-route-id="@item.SanPhamID"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <div><h6><a href="#">@item.Ten</a></h6></div>
                                <h5 class="text-danger">@Html.DisplayFor(modelItem => item.ThanhTien)</h5>
                            </div>
                        </div>
                    </div>
                    i++;
                }
            }
        </div>
        <div class="row">

        </div>
    </div>
</section>
