@{
    ViewData["Title"] = "Contact";
    var danhmuc = ViewBag.danhmuc as IQueryable<webbanlaptop.Models.DanhMuc>;
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh mục</span>
                    </div>
                    <ul>
                        @foreach (var item in danhmuc)
                        {
                            <li><a asp-asp-controller="Home" asp-action="ShopGrid" asp-route-id="@item.DanhMucID">@item.Ten</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form asp-action="SearchProduct">
                            <input type="text" name="name" placeholder="Bạn cần tìm gì?">
                            <button type="submit" class="site-btn">Tìm kiếm</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 358 908 564</h5>
                            <span>Hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="breadcrumb-section bg-light bg-gradient">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2 class="text-muted">Organi Shop</h2>
                    <div class="breadcrumb__option">
                        <a class="text-muted" href="/">Home</a>
                        <span class="text-muted">Contact</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <i class="fa-solid fa-phone fs-3"></i>
                    <h4>Số điện thoại</h4>
                    <p>+84 358 908 564</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <i class="fa-solid fa-location-pin fs-3"></i>
                    <h4>Địa chỉ</h4>
                    <p>18 Ung Văn Khiêm, P. Đông Xuyên, TP. Long Xuyên, An Giang</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <i class="fa-solid fa-clock fs-3"></i>
                    <h4>Thời gian làm việc</h4>
                    <p>08:00 am tới 21:30 pm</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <i class="fa-solid fa-envelope fs-3"></i>
                    <h4>Email</h4>
                    <p>nnga_20pm@student.agu.edu.vn</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d4039.7458865546514!2d105.43164587932816!3d10.373142007704688!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1681702278851!5m2!1svi!2s"
            height="500" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    <div class="map-inside">
        <i class="icon_pin"></i>
        <div class="inside-widget">
            <h4>Đại học An Giang</h4>
            <ul>
                <li>Phone: +84 358 908 564</li>
                <li>Add: 18 Ung Văn Khiêm, P. Đông Xuyên, TP. Long Xuyên, An Giang</li>
            </ul>
        </div>
    </div>
</div>