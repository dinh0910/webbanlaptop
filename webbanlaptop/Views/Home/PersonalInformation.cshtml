@model webbanlaptop.Models.TaiKhoan

<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Thông tin cá nhân</h2>
                </div>
            </div>
        </div>
        <form asp-action="PersonalInformation">
            <input type="hidden" asp-for="TaiKhoanID" />
            <input type="hidden" asp-for="TenTaiKhoan" value="@Context.Session.GetString("_TenTaiKhoanU")" />
            <input type="hidden" asp-for="MatKhau" value="@Context.Session.GetString("_MatKhauU")" />
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <label for="name">Họ và tên</label>
                    <input type="text" id="name" asp-for="HoTen" placeholder="Họ và tên của bạn">
                </div>
                <div class="col-lg-6 col-md-6">
                    <label for="email">Email</label>
                    <input type="email" id="email" asp-for="Email" placeholder="Email của bạn">
                </div>
                <div class="col-lg-12">
                    <label for="sdt">Số điện thoại</label>
                    <input type="text" id="sdt" asp-for="SoDienThoai" placeholder="Số điện thoại của bạn"/>
                </div>
                <div class="col-lg-12">
                    <label for="address">Địa chỉ</label>
                    <input type="text" id="address" asp-for="DiaChi" placeholder="Địa chỉ của bạn" />
                </div>
                <div class="col-lg-12 text-center">
                    <button type="submit" class="site-btn">Chỉnh sửa thông tin</button>
                </div>
            </div>
        </form>
    </div>
</div>