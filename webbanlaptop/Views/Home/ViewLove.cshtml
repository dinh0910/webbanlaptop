@model List<webbanlaptop.Models.CartLove>

@if (Model.Count > 0)
{
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="~/images/products/@item.SanPhams.HinhAnh" alt="">
                                            <h5>@item.SanPhams.Ten</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @Html.DisplayFor(modelItem => item.SanPhams.ThanhTien)
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <a asp-action="RemoveItem" asp-route-id="@item.SanPhams.SanPhamID" class="btn_remove">
                                                <i class="fa-solid fa-xmark"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div class="container mt-5">
        <div class="text-center mt-5">
            <div class="mb-5">
                <span class="fs-1">
                    <i class="fa-solid fa-face-frown"></i>
                </span>
            </div>
            <span class="fs-2 fw-bold">KHÔNG CÓ SẢN PHẨM YÊU THÍCH, VUI LÒNG QUAY LẠI</span>
            <div class="my-5">
                <a class="btn btn-danger fs-5 px-3 py-2" href="/">Về trang chủ</a>
            </div>
        </div>
    </div>
}
