@model webbanlaptop.Models.SanPham

@{
    var tt = ViewBag.ThongTin as IQueryable<webbanlaptop.Models.ThongTin>;
    var ts = ViewBag.ThongSo as IQueryable<webbanlaptop.Models.ThongSo>;
    var ha = ViewBag.HinhAnh as IQueryable<webbanlaptop.Models.HinhAnh>;
    var km = ViewBag.KhuyenMai as IQueryable<webbanlaptop.Models.KhuyenMai>;
    var danhmuc = ViewBag.DanhMuc as IQueryable<webbanlaptop.Models.DanhMuc>;
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh mục</span>
                    </div>
                    <ul>
                        @foreach (var item in danhmuc)
                        {
                            <li><a asp-asp-controller="Home" asp-action="ShopGrid" asp-route-id="@item.DanhMucID">@item.Ten</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">Tìm kiếm</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 358 908 564</h5>
                            <span>Hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="~/images/products/@Model.HinhAnh" />
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        @foreach(var item in ha)
                        {
                            @if (item.SanPhamID == Model.SanPhamID)
                            {
                                <img src="~/images/products/@item.Anh" alt="">
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.Ten</h3>
                    <div class="product__details__price">
                        @Html.DisplayFor(modelItem => Model.ThanhTien)
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach(var item in km){
                            @if (item.SanPhamID == Model.SanPhamID)
                            {
                                <li class="list-group-item fs-5"><i class="fa-solid fa-gift"></i> @item.NoiDung</li>
                            }
                        }
                    </ul>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                    </div>
                    <a href="#" class="primary-btn">Thêm vào giỏ</a>
                    <a href="#" class="heart-icon"><i class="fa fa-heart"></i></a>
                    <ul>
                        <li>
                            <b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" data-bs-target="#tabs-1" role="button"
                               aria-selected="true">Thông tin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tabs-2" role="button"
                               aria-selected="false">Thông số</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <div class="product__details">
                                    <ul>
                                        @foreach (var item in tt)
                                        {
                                            @if (item.SanPhamID == Model.SanPhamID)
                                            {
                                                <li><b>Trong hộp</b> <span>@item.TrongHop</span></li>
                                                <li><b>Bảo hành Pin</b> <span>@item.BaoHanhPin<span></li>
                                                <li><b>Bảo hành Máy</b> <span>@item.BaoHanh</span></li>
                                            }
                                        }
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <div class="product__details">
                                    <ul>
                                        @foreach (var item in ts)
                                        {
                                            @if (item.SanPhamID == Model.SanPhamID)
                                            {
                                                <li><b>Loại Card đồ họa</b> <span>@item.LoaiCard</span></li>
                                                <li><b>Dung lượng Ram</b> <span>@item.Ram<span></li>
                                                <li><b>Loại Ram</b> <span>@item.LoaiRam</span></li>
                                                <li><b>Số khe Ram</b> <span>@item.SoKheRam</span></li>
                                                <li><b>Ổ cứng</b> <span>@item.OCung</span></li>
                                                <li><b>Kích thước màn hình</b> <span>@item.KichThuocManHinh</span></li>
                                                <li><b>Công nghệ màn hình</b> <span>@item.CongNgheManHinh</span></li>
                                                <li><b>Pin</b> <span>@item.Pin</span></li>
                                                <li><b>Hệ điều hành</b> <span>@item.HeDieuHanh</span></li>
                                                <li><b>Độ phân giải</b> <span>@item.DoPhanGiai</span></li>
                                                <li><b>Cổng giao tiếp</b> <span>@item.CongGiaoTiep</span></li>
                                                <li><b>Tính năng khác</b> <span>@item.TinhNangKhac</span></li>
                                                <li><b>Khối lượng</b> <span>@item.CanNang</span></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>