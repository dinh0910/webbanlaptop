@model IEnumerable<webbanlaptop.Models.DonDatHang>

@{
    var ctdh = ViewBag.ctdh as IQueryable<webbanlaptop.Models.ChiTietDatHang>;
    var i = 0;
}

@if (Model.Count() > 0)
{
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            @Html.DisplayFor(modelItem => item.NgayLap)
                                        </td>
                                        <td class="shoping__cart__price">
                                            @Html.DisplayFor(modelItem => item.TongTien)
                                        </td>
                                        <td class="shoping__cart__item__close">
                                        </td>
                                    </tr>
                                    <tr>
                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên sản phẩm</th>
                                                    <th>Đơn giá</th>
                                                    <th>Số lượng</th>
                                                    <th>Thành tiền</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(var j in ctdh){
                                                    @if(j.DonDatHangID == item.DonDatHangID)
                                                    {
                                                        <tr>
                                                            <td>@(i++)</td>
                                                            <td>@j.SanPhams.Ten</td>
                                                            <td>@j.DonGia</td>
                                                            <td>@j.SoLuong</td>
                                                            <td>@j.ThanhTien</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div class="container mt-5">
        <div class="text-center mt-5">
            <div class="mb-5">
                <span class="fs-1">
                    <i class="fa-solid fa-face-frown"></i>
                </span>
            </div>
            <span class="fs-2 fw-bold">SỐ ĐIỆN THOẠI CỦA BẠN KHÔNG CÓ TRONG HỆ THỐNG ĐẶT HÀNG, VUI LÒNG QUAY LẠI</span>
            <div class="my-5">
                <a class="btn btn-danger fs-5 px-3 py-2" href="/">Về trang chủ</a>
            </div>
        </div>
    </div>
}
