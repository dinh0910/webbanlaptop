@model IEnumerable<webbanlaptop.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <a class="btn btn-primary mb-5" role="button" data-bs-toggle="modal" data-bs-target="#modalCreate">Thêm mới</a>
</div>

<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="p-2">
                    <div class="text-center mb-2">
                        <span class="fw-bold fs-3" style="color:#7fad39">Thêm Banner</span>
                    </div>
                    <form asp-action="Create">
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Tên tài khoản</label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Mật khẩu</label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Họ tên</label>
                            <input type="file" name="HoTen" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Địa chỉ</label>
                            <input type="file" name="DaiChi" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Số điện thoại</label>
                            <input type="file" name="SoDienThoai" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Email</label>
                            <input type="file" name="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label mb-1"></label>
                            <select name="QuyenID" class="form-control" asp-items="ViewBag.QuyenID"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenTaiKhoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quyens)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTaiKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quyens.QuyenID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaiKhoanID"><i class="fa-solid fa-pen-to-square text-success"></i></a>
                <a asp-action="Details" asp-route-id="@item.TaiKhoanID"><i class="fa-solid fa-circle-info text-primary"></i></a>
                <a asp-action="Delete" asp-route-id="@item.TaiKhoanID"><i class="fa-solid fa-trash text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>