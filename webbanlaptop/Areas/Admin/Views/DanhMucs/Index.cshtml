@model IEnumerable<webbanlaptop.Models.DanhMuc>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh mục</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.DanhMucID"><i class="fa-solid fa-pen-to-square text-success"></i></a>
                    <a asp-action="Details" asp-route-id="@item.DanhMucID"><i class="fa-solid fa-circle-info text-primary"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.DanhMucID"><i class="fa-solid fa-trash text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
