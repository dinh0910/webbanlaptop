@model IEnumerable<webbanlaptop.Models.ChiTietNhapHang>

@{
    var i = 1;
}

<h1 class="mt-4">Chi tiết</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
    <li class="breadcrumb-item"><a asp-controller="SanPhams" asp-action="Index">Sản phẩm</a></li>
    <li class="breadcrumb-item"><a asp-controller="SanPhams" asp-action="Stored">Kho</a></li>
    <li class="breadcrumb-item"><a asp-controller="SanPhams" asp-action="HistoryImport">Lịch sử nhập hàng</a></li>
    <li class="breadcrumb-item active">Chi tiết nhập hàng</li>
</ol>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                Mã phiếu nhập hàng
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhapHangID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SanPhams.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonViTinhs.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>
            </tr>
        }
    </tbody>
</table>
