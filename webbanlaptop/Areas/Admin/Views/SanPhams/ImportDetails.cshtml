@model IEnumerable<webbanlaptop.Models.ChiTietNhapHang>

@{
    var i = 1;
}

<h1>Chi tiết</h1>

<button class="btn btn-info" id="print" onclick="printContent('printerDiv');">Print</button>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                Mã phiếu nhập hàng
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhapHangID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SanPhams.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonViTinhs.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>
            </tr>
        }
    </tbody>
</table>
