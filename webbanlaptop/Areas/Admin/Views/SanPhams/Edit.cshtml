@model webbanlaptop.Models.SanPham

<h1 class="mt-4">Sửa sản phẩm @Model.Ten</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SanPhamID" />
            <div class="form-group">
                <label asp-for="DanhMucID" class="control-label"></label>
                <select asp-for="DanhMucID" class="form-control" asp-items="ViewBag.DonDatHangID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThuongHieuID" class="control-label"></label>
                <select asp-for="ThuongHieuID" class="form-control" asp-items="ViewBag.SanPhamID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ten" class="control-label"></label>
                <input asp-for="Ten" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label>
                <input type="file" name="file" asp-for="HinhAnh" class="form-control" />
                <input type="hidden" asp-for="HinhAnh" />
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="GiamGia" class="control-label"></label>
                <input asp-for="GiamGia" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ThanhTien" class="control-label"></label>
                <input asp-for="ThanhTien" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
