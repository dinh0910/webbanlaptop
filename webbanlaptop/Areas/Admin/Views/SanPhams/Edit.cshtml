@model webbanlaptop.Models.SanPham

<h1 class="mt-4">Sửa sản phẩm @Model.Ten</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SanPhamID" />
            <div class="form-group">
                <label asp-for="DanhMucID" class="control-label"></label>
                <select asp-for="DanhMucID" class="form-control" asp-items="ViewBag.DanhMucID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThuongHieuID" class="control-label"></label>
                <select asp-for="ThuongHieuID" class="form-control" asp-items="ViewBag.ThuongHieuID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ten" class="control-label"></label>
                <input asp-for="Ten" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label>
                <input type="file" name="file" asp-for="HinhAnh" class="form-control" />
                <input type="hidden" asp-for="HinhAnh" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label mb-1">Đơn giá</label>
                <input type="text" id="DonGia" asp-for="DonGia" name="DonGia" class="form-control" oninput="tinhSale();" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label mb-1">Giảm giá(%)</label>
                <input type="number" id="GiamGia" asp-for="GiamGia" name="GiamGia" class="form-control" oninput="tinhSale();" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label mb-1">Đặc trưng</label>
                <select class="form-select" asp-for="DacTrung" aria-label="Default select example">
                    <option selected>--Chọn--</option>
                    <option value="macbook">Macbook</option>
                    <option value="gaming">Gaming</option>
                    <option value="vanphong">Văn phòng</option>
                </select>
            </div>
            <div class="form-group">
                <input type="hidden" name="ThanhTien" asp-for="ThanhTien" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="SoLuong" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function tinhSale() {
        var donGia = document.getElementById("DonGia").value;
        var giamGia = document.getElementById("GiamGia").value;
        document.getElementById("ThanhTien").value = donGia - (donGia * (giamGia / 100));
    }
</script>