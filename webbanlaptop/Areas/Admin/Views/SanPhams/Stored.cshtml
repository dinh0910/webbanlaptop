@model IEnumerable<webbanlaptop.Models.SanPham>

@{
    var i = 1;
}

<h1>Danh sách sản phẩm trong kho</h1>

<div class="mb-5">
    <a class="btn btn-outline-primary" role="button" data-bs-toggle="modal" data-bs-target="#modalCreate">Nhập hàng</a>
    <a class="btn btn-outline-success mx-3">Danh sách phiếu nhập</a>
</div>

<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center mb-2">
                    <span class="fw-bold fs-3" style="color:#7fad39">Thêm Sản phẩm</span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="p-2">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="control-label">Danh mục</label>
                            <select name="DanhMucID" class="form-control" asp-items="ViewBag.DanhMucID"></select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(i++)
                </td>
                <td>
                    <img src="~/images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" width="100" class="img-thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThuongHieus.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
            </tr>
        }
    </tbody>
</table>
