@model IEnumerable<webbanlaptop.Models.NhapHang>

@{
    var i = 1;
}

<h1>Danh sách sản phẩm trong kho</h1>

<div class="mb-5">
    <a class="btn btn-outline-primary" role="button" data-bs-toggle="modal" data-bs-target="#modalCreate">Nhập hàng</a>
    <a class="btn btn-outline-success mx-3">Danh sách phiếu nhập</a>
</div>

<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center mb-2">
                    <span class="fw-bold fs-3" style="color:#7fad39">Nhập sản phẩm</span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="p-2">
                    <form asp-action="AddProduct">
                        <div class="form-group">
                            <label class="control-label">Sản phẩm</label>
                            <select name="SanPhamID" class="form-control" asp-items="ViewBag.SanPhamID"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Số lượng</label>
                            <input type="number" name="SoLuong" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Nhập" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Nhân viên
            </th>
            <th>
                Nhà cung cấp
            </th>
            <th>
                Ngày nhập đơn
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(i++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoans.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaCungCaps.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayNhap)
                </td>
            </tr>
        }
    </tbody>
</table>
