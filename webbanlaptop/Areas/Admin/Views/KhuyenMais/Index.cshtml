@model IEnumerable<webbanlaptop.Models.KhuyenMai>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KhuyenMaiID"><i class="fa-solid fa-pen-to-square text-success"></i></a>
                <a asp-action="Details" asp-route-id="@item.KhuyenMaiID"><i class="fa-solid fa-circle-info text-primary"></i></a>
                <a asp-action="Delete" asp-route-id="@item.KhuyenMaiID"><i class="fa-solid fa-trash text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
