@model IEnumerable<webbanlaptop.Models.Banner>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Banner</h1>

<div>
    <a class="btn btn-primary mb-5" role="button" data-bs-toggle="modal" data-bs-target="#modalCreate">Thêm mới</a>
</div>

<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center mb-2">
                    <span class="fw-bold fs-3" style="color:#7fad39">Thêm Banner</span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="p-2">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Hình ảnh</label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-1">Active</label>
                            <input type="text" name="BiaDau" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>
            <th>
                Active
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="mb-4">
            <td>
                <img src="~/images/banners/@Html.DisplayFor(modelItem => item.HinhAnh)" class="img-thumbnail" width="100" />
            </td>
            <td class="d-flex">
                <div class="p-2 w-100">
                    @Html.DisplayFor(modelItem => item.BiaDau)
                </div>
                <div class="p-2 flex-shrink-1 d-flex flex-column">
                    <a class="p-2" asp-action="Edit" asp-route-id="@item.BannerID">
                        <i class="fa-solid fa-pen-to-square text-success"></i>
                    </a>

                    <a class="p-2" role="button" data-bs-toggle="modal" data-bs-target="#modalDelete">
                        <i class="fa-solid fa-trash text-danger"></i>
                    </a>
                    <div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="modalDeleteLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Bạn có chắc chắn xóa?</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-footer">
                                    <a href="/Admin/Banners/Delete/@item.BannerID" role="button" class="btn btn-danger">Xóa</a>
                                    <a role="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
